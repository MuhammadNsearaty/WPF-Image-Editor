<Window x:Class="Project2ImageEditor.Signup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project2ImageEditor"
        mc:Ignorable="d"
        Title="Signup" Height="500" Width="650">
    <Grid>
        <StackPanel Margin="1,0,-0.8,0.4">
            <Image Height="133" Margin="240,10,245.2,10" Source="Resources\icons\profile-icon-22.png"/>
            <Label Content="Email" Margin="240,0,326.2,0" Height="24"/>
            <TextBox x:Name="emailBox" Height="25" TextWrapping="Wrap"  Margin="240,0,245.2,10"/>
            <Label Content="Name" Margin="240,0,346.2,0"/>
            <TextBox x:Name="nameBox" Height="25" TextWrapping="Wrap" Margin="240,0,245.2,10"/>
            <Label Content="Password" Margin="240,0,346.2,0"/>
            <TextBox x:Name="passwordBox" Height="25" TextWrapping="Wrap" Margin="240,0,245.2,10"/>
            <Label Content="Confirm Password" Margin="240,0,290.2,0"/>
            <TextBox x:Name="cnfPasswordBox" Height="25" TextWrapping="Wrap" Margin="240,0,245.2,0"/>
            <Button x:Name="signUpButton" Content="SignUp" HorizontalAlignment="Right" Margin="0,20,269.2,0" Width="109" Height="31"/>

        </StackPanel>
    </Grid>
</Window>
